@page "{id:int?}"
@model ProjektNET.Pages.RateAdvertizerModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
  
<h2 class="text-info pt-2 pb-3">Oceń wystawiającego</h2>  
  
<div class="row backgroundWhite border">  
  
    <div class="col-md-8" asp-validation-summary="All">  
        <form asp-route-returnUrl="@Model.OnPostAsync"  method="post">    
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="Rate!.RateValue"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="Rate!.RateValue" class="form-control" />  
                    </div>  
                    <span asp-validation-for="Rate!.RateValue" class="text-danger"></span>
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="Rate!.Comment"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="Rate!.Comment" class="form-control" /> 
                    </div>   
                    <span asp-validation-for="Rate!.Comment" class="text-danger"></span>
                </div>  
            </div>  

            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                          
                    </div>  
                    <div class="col-8">  
                        <button type="submit" class="btn btn-success form-control">Dodaj opinię</button>  
                    </div> 
                </div>  
            </div>  
        </form>  
    </div>  
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}