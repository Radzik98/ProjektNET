@page
@model ProjektNET.Pages.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
  
<h2 class="text-info pt-2 pb-3">Zarejestruj siÄ™</h2>  
  
<div class="row backgroundWhite border">  
  
    <div class="col-md-8">  
        <form asp-route-returnUrl="@Model.OnPostAsync" method="post">    
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="User!.Name"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="User!.Name" class="form-control" />  
                    </div>  
                    <span asp-validation-for="User!.Name" class="text-danger"></span>
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="User!.Surname"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="User!.Surname" class="form-control" /> 
                    </div>   
                    <span asp-validation-for="User!.Surname" class="text-danger"></span>
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="User!.Email"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="User!.Email" class="form-control" />  
                    </div>
                    <span asp-validation-for="User!.Email" class="text-danger"></span>
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="User!.Password"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="User!.Password" class="form-control" />  
                    </div> 
                    <span asp-validation-for="User!.Password" class="text-danger"></span>
                </div>  
            </div>

            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="User!.ConfirmPassword"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="User!.ConfirmPassword" class="form-control" />  
                    </div>  
                    <span asp-validation-for="User!.ConfirmPassword" class="text-danger"></span>  
                </div>  
            </div>
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                          
                    </div>  
                    <div class="col-8">  
                        <button type="submit" class="btn btn-success form-control">Register</button>  
                    </div> 
                </div>  
            </div>  
        </form>  
    </div>  
  
</div> 