@page "{id:int?}"
@model ProjektNET.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj swoje dane</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User!.Id" />
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="User!.Name"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="User!.Name" class="form-control" />  
                    </div>  
                    <span asp-validation-for="User!.Name" class="text-danger"></span>
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="User!.Surname"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="User!.Surname" class="form-control" /> 
                    </div>   
                    <span asp-validation-for="User!.Surname" class="text-danger"></span>
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="User!.Email"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="User!.Email" class="form-control" />  
                    </div>
                    <span asp-validation-for="User!.Email" class="text-danger"></span>
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="User!.Password"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="User!.Password" class="form-control" />  
                    </div> 
                    <span asp-validation-for="User!.Password" class="text-danger"></span>
                </div>  
            </div>

            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="User!.ConfirmPassword"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="User!.ConfirmPassword" class="form-control" />  
                    </div>  
                    <span asp-validation-for="User!.ConfirmPassword" class="text-danger"></span>  
                </div>  
            </div>
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                          
                    </div>  
                    <div class="col-8">  
                        <button type="submit" class="btn btn-success form-control">Zapisz</button>  
                    </div> 
                </div>  
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Wróć do strony</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}