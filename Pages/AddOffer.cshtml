@page "{id:int?}"
@model ProjektNET.Pages.AddOfferModel

@{
    ViewData["Title"] = "Add offer";
}

<h1>Dodaj ofertę</h1>

<h4>Input</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="Input!.Description"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="Input!.Description" class="form-control" />  
                    </div>  
                    <span asp-validation-for="Input!.Description" class="text-danger"></span>
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="Input!.Category"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="Input!.Category" class="form-control" /> 
                    </div>   
                    <span asp-validation-for="Input!.Category" class="text-danger"></span>
                </div>  
            </div> 
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Wróć do strony</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}