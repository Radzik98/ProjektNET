@page
@model ProjektNET.Pages.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
  
<h2 class="text-info pt-2 pb-3">Dodaj ofertę</h2>  
  
<div class="row backgroundWhite border">  
  
    <div class="col-md-8" asp-validation-summary="All">  
        <form asp-route-returnUrl="@Model.OnPostAsync"  method="post">    
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="Input!.Description"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="Input!.Description" class="form-control" />  
                    </div>  
                    <span asp-validation-for="Input!.Description" class="text-danger"></span>
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="Input!.Category"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="Input!.Category" class="form-control" /> 
                    </div>   
                    <span asp-validation-for="Input!.Category" class="text-danger"></span>
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                          
                    </div>  
                    <div class="col-8">  
                        <button type="submit" class="btn btn-success form-control">Dodaj ofertę</button>  
                    </div> 
                </div>  
            </div>  
        </form>  
    </div>  
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}