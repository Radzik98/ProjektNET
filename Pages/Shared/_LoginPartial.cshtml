@using Microsoft.AspNetCore.Identity
@using ProjektNET.Extensions

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            Witaj @User.Identity.Name!
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-page="/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Wyloguj</button>
            </form>
            <form class="form-inline" asp-area="" asp-page="/Edit" asp-route-returnUrl="@Url.Page("/", new { area = "" })" asp-route-id="@ClaimsPrincipalExtension.GetUserId(@User)" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Edytuj dane</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Register">Zarejestruj się</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Login">Zaloguj się</a>
        </li>
    }
</ul>